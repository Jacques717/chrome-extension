{
  "manifest_version": 3,
  "name": "Secure Data Lookup",
  "version": "1.0",
  "description": "Securely fetch and display data from a database.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.your-backend.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
